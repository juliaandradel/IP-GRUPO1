import pygame as pg
from sys import exit
from classes_jogador import Jogador
from random import randint
from classes_inimigos import Inimigo
from classes_jogo import Tela_de_escolha

pg.init()
largura = 1280
altura = 720
tela = pg.display.set_mode((largura, altura))
menu = Tela_de_escolha(tela)
player = Jogador(tela, 100, 100, 30, 30, 'RED', 6, pg.K_w, pg.K_s, pg.K_a, pg.K_d)
enemy = Inimigo(tela,1)
fps = pg.time.Clock()

while menu.escolheu == False:
    fps.tick(15)
    for event in pg.event.get():
        menu.movimentacao_escolha(event)
    tela.fill((0, 0, 0))
    menu.mostrar_texto()
    menu.triangulos_de_escolha()
    menu.mostrar_imagem()
    pg.display.update()

while True:
    fps.tick(144)
    for event in pg.event.get():
        if event.type == pg.QUIT:
            pg.quit()
            exit()

    tela.fill((0, 0, 0))
    player.movimentacao()
    player.update()
    enemy.movimentacao(player.x,player.y)
    enemy.existir()
    pg.display.update()
